<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="watchtower.escaperoom.EleventhClue"
    android:layoutDirection="ltr"
    android:background="@drawable/hilberthotelnoir"
    android:id="@+id/dipLayout"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <EditText
            android:id="@+id/redTrayButton"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:textColor="@color/blanco"
            android:background="@color/red"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:maxLength="8"
            />



        <EditText
            android:id="@+id/blueTrayButton"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:textColor="@color/blanco"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:maxLength="6"

            />

        <EditText
            android:id="@+id/yellowTrayButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textColor="@color/blanco"
            android:background="@drawable/circle_shape"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:maxLength="8"

            />


    </LinearLayout>


</RelativeLayout>
