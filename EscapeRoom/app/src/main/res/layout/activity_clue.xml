<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hilberthotel3"
    tools:context="watchtower.escaperoom.ClueAct"
    android:id="@+id/activity_clue">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2">

        <GridLayout
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="1"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/pass1"
                android:layout_column="0"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>

            <EditText
                android:id="@+id/pass2"
                android:layout_column="1"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>

            <EditText
                android:id="@+id/pass3"
                android:layout_column="2"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>

            <EditText
                android:id="@+id/pass4"
                android:layout_column="3"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>

            <EditText
                android:id="@+id/pass5"
                android:layout_column="4"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>

            <Button
                android:id="@+id/submit"
                android:layout_column="5"
                android:layout_row="0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tickc"
                android:onClick="checkPassword"
                >


            </Button>

        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_column="0"
            android:layout_row="1"
            android:columnCount="3"
            android:rowCount="4">


            <Button
                android:id="@+id/first"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_row="0"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/second"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="1"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_row="0"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/third"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_marginBottom="20dp"
                android:layout_row="0"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/fourth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_row="1"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/fifth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="1"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_row="1"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/sixth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_marginBottom="20dp"
                android:layout_row="1"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/seventh"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_row="2"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/eighth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="1"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_row="2"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/ninth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_marginBottom="20dp"
                android:layout_row="2"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/tenth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_marginRight="30dp"
                android:layout_row="3"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/eleventh"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="1"
                android:layout_marginRight="30dp"
                android:layout_row="3"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>

            <Button
                android:id="@+id/twelfth"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@android:drawable/ic_lock_idle_lock"
                android:enabled="false"
                android:onClick="goToClue"></Button>


        </GridLayout>


    </GridLayout>


    

 

</RelativeLayout>
