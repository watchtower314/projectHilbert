<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="watchtower.escaperoom.FirstClue"
    android:background="@drawable/hilberthotelnoir"
    android:id="@+id/activity_marbles">



    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:layout_centerInParent="true">


        <!--redbox1, bluebox1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/redBox1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/holo_red_dark"
                android:maxLength="3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/blanco">

            </EditText>

            <EditText
                android:id="@+id/blueBox1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:maxLength="3"
                android:background="@android:color/holo_blue_dark"
                android:text=""
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/blanco">

            </EditText>
            </LinearLayout>

        </TableRow>

        <!-- redbox2, bluebox2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">


                <EditText
                    android:id="@+id/redBox2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center"
                    android:maxLength="3"
                    android:background="@android:color/holo_red_dark"
                    android:text=""
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco">

                </EditText>

                <EditText
                    android:id="@+id/blueBox2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:maxLength="3"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="center"
                    android:background="@android:color/holo_blue_dark"
                    android:text=""
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco">

                </EditText>


            </LinearLayout>

        </TableRow>

        <!-- check button -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/firstCheck"
                android:layout_width="170dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/firstcheck"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:onClick="checkAns"
                android:tag="check">
            </Button>



        </TableRow>


        <!-- next button -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/firstContinue"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/continuar"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:background="@color/green"
                android:onClick="nextClue"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                >
            </Button>

        </TableRow>


    </TableLayout>

</RelativeLayout>
