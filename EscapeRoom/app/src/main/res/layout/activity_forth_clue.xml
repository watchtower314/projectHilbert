<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="watchtower.escaperoom.ForthClue"
    android:background="@drawable/hilberthotelnoir"
    android:id="@+id/callMe"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <!--  TODO: consider change these setting to tableLaout-->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_centerInParent="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:columnCount="5"
            android:rowCount="2">


            <EditText
                android:id="@+id/one"
                android:layout_column="0"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/two"
                android:layout_column="1"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/three"
                android:layout_column="2"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/four"
                android:layout_column="3"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/five"
                android:layout_column="4"
                android:layout_row="0"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/six"
                android:layout_column="0"
                android:layout_row="1"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/seven"
                android:layout_column="1"
                android:layout_row="1"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/eight"
                android:layout_column="2"
                android:layout_row="1"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/nine"
                android:layout_column="3"
                android:layout_row="1"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>
            <EditText
                android:id="@+id/ten"
                android:layout_column="4"
                android:layout_row="1"
                android:width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanco"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                >
            </EditText>

        </GridLayout>

        <Button
            android:id="@+id/pressForClue"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="170dp"
            android:text="@string/pressForClue"
            android:background="@color/blanco"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:onClick="checkInput"
            android:layout_gravity="center">
        </Button>

        <Button
            android:id="@+id/fourthContinue"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/continuar"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            android:background="@color/green"
            android:onClick="nextClue"
            android:visibility="invisible">
        </Button>


    </GridLayout>


</RelativeLayout>
