<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="watchtower.escaperoom.FifthClue"
    android:background="@drawable/hilberthotelnoir"
    android:id="@+id/findMyPhone"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layoutDirection="ltr">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <!--
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:onClick="escapeThis"
            />

        -->
            <!-- book name -->
            <EditText
                android:layout_gravity="center_horizontal"
                android:id="@+id/bookName"
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:background="@color/blanco"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:hint="@string/bookN"
                android:textColorHint="@android:color/holo_blue_light"

                >

            </EditText>

            <!-- tick circle -->
            <Button
                android:id="@+id/checkAnswer"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tickcyan"
                android:onClick="checkAns"
                android:enabled="true"
                android:tag="bluetick">

            </Button>





    </LinearLayout>

</RelativeLayout>
